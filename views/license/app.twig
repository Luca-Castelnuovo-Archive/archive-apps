<div class="col s12 m12 l6">
    <div class="card hoverable">
        <div class="card-content">
            <span class="card-title">{{ app.name }}</span>
        </div>
        <div class="card-action">
            <div class="row">
                <div class="col s12">
                    {% if not app.active %}
                        <button class="btn-large waves-effect waves-light full-width blue accent-4" disabled>
                            App Disabled
                        </button>
                    {% elseif app.licensed %}
                        <a class="btn-large waves-effect waves-light full-width blue accent-4" target="_blank" href="/launch/{{ app.id }}">
                            Launch
                        </a>
                    {% else %}
                        <button class="btn-large waves-effect waves-light full-width" onClick="licensePopup('{{ app.gumroad_id }}')">
                            Buy License
                        </button>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
