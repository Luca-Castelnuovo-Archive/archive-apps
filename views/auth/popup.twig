{% extends "partials/base.twig" %}
{% set title = "OAuth" %}
{% set navbarDisable = true %}
{% set page_css = "" %}
{% set page_script = "" %}

{% block content %}
<div class="row">
    <div class="col s12">
        <h1>Please Wait</h1>
    </div>
    <div class="col s12">
        <div class="progress">
            <div class="indeterminate"></div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        window.opener.popupCallback('{{ id }}');

        window.close();
    });
</script>
{% endblock %}
