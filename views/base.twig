{% autoescape %}
    {% apply spaceless %}
        <!DOCTYPE html>
        <html>
            {% include 'partials/header.twig' %}

            <body>
                <style>
                    {% block style %}{% endblock %}
                </style>

                {% if not navbarDisable %}
                    {% include 'partials/navbar.twig' %}
                {% endif %}

                <div class="section">
                    <div class="container">
                        {% block content %}{% endblock %}
                    </div>
                </div>

                {% include 'partials/footer.twig' with analytics only %}
                
                {% if block('script') is defined %}
                    <script>
                        {{ block('script')|raw }}
                    </script>
                {% endif %}
            </body>

        </html>
    {% endapply %}
{% endautoescape %}
