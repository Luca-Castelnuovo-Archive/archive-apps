<form id="auth-register-invite" class="modal">
    <div class="modal-content">
        <h4>Invite Code</h4>
        <div class="row">
            <div class="input-field col s12">
                <input id="invite_code" name="invite_code" type="text" class="validate" required>
                <label for="invite_code">Invite Code</label>
                <span class="helper-text" data-error="Invite code is required"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {% include 'partials/hcaptcha.twig' %}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn blue accent-4 waves-effect waves-light" type="submit">Submit</button>
    </div>
</form>
