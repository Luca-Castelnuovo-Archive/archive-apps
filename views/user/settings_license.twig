<h3>Licenses: <button class="btn blue accent-4 waves-effect waves-light  modal-trigger" data-target="modal-license">Add manually</button></h3>

<div id="modal-license" class="modal">
    <div class="modal-content">
        <h4>Add license</h4>
        <div class="row mb-0">
            <div class="input-field col s12 mb-0">
                <input id="license" name="license" type="text" class="validate" required>
                <label for="license">License</label>
                <span class="helper-text" data-error="Valid license is required"></span>
            </div>
        </div>
        <div class="row mb-0">
            <div class="input-field col s12">
                <select id="gumroad_id" name="gumroad_id">
                    <option value="" disabled selected>Choose your option</option>
                    {% for app in apps %}
                    <option value="{{ app.gumroad_id }}">{{ app.name }}</option>
                    {% endfor %}
                </select>
                <label>App</label>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn blue accent-4 waves-effect waves-light" onClick="addLicense()">Add this license key</button>
    </div>
</div>

<div class="row">
    {% if not licenses %}
        <div class="col s12 m6">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">No licenses added</span>
                </div>
            </div>
        </div>
    {% endif %}
    {% for license in licenses %}
    <div class="col s12 m6">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{ license.name }}</span>
                <p>License Key: <span class="flow-text">{{ license.license }}</span></p>
                </p>Added On: <span class="flow-text">{{ license.created_at }}</span></p>
            </div>
            <div class="card-action">
                <button class="btn waves-effect waves-light" onClick="removeLicense('{{ license.license }}')">Remove license</button>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
