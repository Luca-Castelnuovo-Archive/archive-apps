<div class="col s12 m12 l6">
    <div class="card hoverable">
        <div class="card-content">
            <span class="card-title">{{ app.name }}</span>
        </div>
        <div class="card-action">
            <div class="row">
                <div class="col s12">
                    <a class="btn-large waves-effect waves-light {{ app.licensed ? 'blue accent-4' : '' }}" style="width: 100%" target="_blank" href="{{ app.licensed ? '/app/launch/' ~ app.id : 'https://gum.co/' ~ app.gumroad_id }}">
                        {{ app.licensed ? 'Launch' : 'Buy license' }}
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
